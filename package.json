{
  "name": "cyberpunk-beavers",
  "type": "module",
  "scripts": {
    "dev": "yarn build && yarn nodemon src/game/backend/main.mjs",
    "dev:rsg": "yarn build && yarn nodemon src/game/backend/main.mjs --gameMode rsg",
    "serve:dev": "vite --config vite/config.dev.mjs",
    "serve:dev:rsg": "VITE_GAME_MODE=rsg vite --config vite/config.dev.mjs",
    "serve:local": "vite --config vite/config.local.mjs",
    "serve:local:rsg": "VITE_GAME_MODE=rsg vite --config vite/config.local.mjs",
    "serve:prod": "vite --config vite/config.prod.mjs",
    "serve:prod:rsg": "VITE_GAME_MODE=rsg vite --config vite/config.prod.mjs",
    "build:ui": "vite build --config vite/config.build.mjs",
    "build:ui:rsg": "VITE_GAME_MODE=rsg vite build --config vite/config.build.mjs",
    "deploy-session:local": "yarn build && node tools/deploy-spawn-session.js --env local --limit 20 --time $1",
    "deploy-session:local:rsg": "yarn build && node tools/deploy-spawn-session.js --env local --limit 20 --gameMode rsg --time $1",
    "deploy-session-game:local": "yarn build && node tools/deploy-spawn-session-game.js --env local --limit 20 --time $1",
    "deploy-session:prod": "yarn build && node tools/deploy-spawn-session.js --env prod --limit 20 --time $1",
    "deploy-session:prod:rsg": "yarn build && node tools/deploy-spawn-session.js --env prod --limit 20 --gameMode rsg --time $1",
    "deploy-session-game:prod": "yarn build && node tools/deploy-spawn-session-game.js --env prod --limit 20 --time $1",
    "test": "node build.js && vitest",
    "build": "node build.js",
    "format": "npx prettier --write .",
    "prepare": "husky install"
  },
  "dependencies": {
    "mrpas": "^2.0.0",
    "@metamask/sdk": "^0.28.2",
    "phaser": "^3.80.1",
    "warp-contracts": "^1.4.45",
    "warp-contracts-plugin-quickjs": "^1.1.10",
    "warp-contracts-plugin-signature": "^1.0.20",
    "webfontloader": "^1.6.28",
    "ws": "^8.16.0"
  },
  "devDependencies": {
    "@ardrive/turbo-sdk": "latest",
    "@permaweb/aoconnect": "^0.0.55",
    "arweave": "^1.15.1",
    "esbuild": "^0.20.2",
    "eslint": "^8.57.0",
    "husky": "^8.0.0",
    "nodemon": "^3.1.0",
    "prettier": "^3.3.3",
    "terser": "^5.28.1",
    "vite": "^5.3.1",
    "vitest": "^1.6.0",
    "warp-arbundles": "^1.0.4",
    "warp-contracts-plugin-deploy": "^1.0.13"
  }
}
